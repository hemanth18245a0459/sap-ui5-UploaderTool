<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="currencyValueHelpDialog" title="Select Currency" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer" stretch="true">
        <content>
            <List id="currencyList" mode="SingleSelectMaster" items="{/currencies}">
                <StandardListItem title="{code}" />
            </List>
        </content>
        <endButton>
            <Button text="Cancel" press="onCurrencyValueHelpCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>